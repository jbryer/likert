Package: likert
Type: Package
Title: Analysis and Visualization Likert Items
Version: 2.0.1
Date: 2025-03-24
Authors@R: c(
    person("Jason", "Bryer", , "jason@bryer.org", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0002-2454-0402")),
    person("Kim", "Speerschneider", , "kimkspeer@gmail.com", role = "ctb")
